trendyD = {
	bg: #2c3e50,
	fg: #1abc9c,
	fgN: #95a5a6,
	hover: @() {
		background-color: lighten(trendyD.bg, 4)
	},
	active: @(){
		box-shadow: inset 0 2px 3px darken(trendyD.bg, 5)
	},
	focus: @(){
		color: trendyD.fgH
		border-color: trendyD.fgH
	},
	disable: @(){
		color: trendyD.fgN
		border-color: trendyD.fgN
	}
}

trendyD.fgH = mix(trendyD.fg, trendyD.fgN, 50)
