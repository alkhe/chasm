@import '..'

trendyD-bg = #2c3e50
trendyD-fg = #1abc9c
trendyD-fgN = #95a5a6
trendyD-fgH = mix(trendyD-fg, trendyD-fgN, 50)

trendyD = {
	extra: @() {
		border 2px solid trendyD-fg
		border-radius 5px
	},
	hover: @(){
		background-color lighten(trendyD-bg, 4)
	},
	active: @(){
		box-shadow inset 0 2px 3px darken(trendyD-bg, 5)
	},
	focus: @(){
		color trendyD-fgH
		border-color trendyD-fgH
	},
	disable: @(){
		color trendyD-fgN
		border-color trendyD-fgN
	}
}

.trendyD
	button(
		trendyD-bg, trendyD-fg, trendyD.extra,
		trendyD.hover, trendyD.active, trendyD.focus, trendyD.disable
	)
