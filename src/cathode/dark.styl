@import '..'

cathodeD-bg = #2f3237
cathodeD-fg = lighten(#7f8c8d, 10)

cathodeD = {
	extra: @(){
		border 2px solid rgba(0, 0, 0, 0)
	}
	hover: @(){
		background-color lighten(cathodeD-bg, 4)
		border-color cathodeD-fg
		textglow(darken(cathodeD-fg, 20))
	},
	active: @(){
		background-color darken(cathodeD-bg, 1)
		box-shadow inset 0 3px 4px darken(cathodeD-bg, 4)
	},
	focus: @(){
		border-color cathodeD-fg
	},
	disable: @(){
		color darken(cathodeD-fg, 16)
		background-color darken(cathodeD-bg, 4)
	}
}

.cathodeD
	button(
		cathodeD-bg, cathodeD-fg, cathodeD.extra,
		cathodeD.hover, cathodeD.active, cathodeD.focus, cathodeD.disable
	)

xbutton(tc, c)
	background-color: lighten(c, 2)
	color: tc
	border: 2px solid rgba(0, 0, 0, 0)
	anitime(100ms)
	&:hover:not(:disabled)
		background-color: lighten(c, 4)
		border-color: tc
		textglow(darken(tc, 20))
	&:active
		background-color: darken(c, 1)
		box-shadow: inset 0 3px 4px darken(c, 4)
	&:disabled
		color: darken(tc, 16)
		background-color: darken(c, 4)
	&:focus
		border-color: tc
.gray
	c = #2f3237
	tc = lighten(#7f8c8d, 10)
	tcb = lighten(#3498db, 10)
	tcg = lighten(#2ecc71, 10)
	tcr = lighten(#e74c3c, 10)
	padding: 50px
	background-color c
	button
		&.plain
			xbutton(tc, mix(c, tc, 95))
		&.blue
			xbutton(tcb, mix(c, tcb, 95))
		&.green
			xbutton(tcg, mix(c, tcg, 95))
		&.red
			xbutton(tcr, mix(c, tcr, 95))
